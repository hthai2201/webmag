<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2>Featured Posts</h2>
                </div>
            </div>
            <!-- featuredPosts -->
            {{#with firstfeaturedPost}}
            <div class="col-md-8">
                <div class="post post-thumb">
                    <a class="post-img" href="/article/{{slug}}"><img src=".{{cover}}" alt="{{title}}"></a>
                    <div class="post-body">
                        <div class="post-meta">
                            {{#with this.category}}
                            <a class="post-category set-bg" data-color="{{color}}" style="background-color: {{color }};"
                                href="/categories/{{slug}}">{{name}}</a>
                            {{/with}}
                            <span class="post-date">{{date createdAt "MMMM D, YYYY"}}</span>
                        </div>
                        <h3 class="post-title"><a href="/posts/{{slug}}">{{title}}</a></h3>
                    </div>
                </div>
            </div>
            {{/with}}

            <div class="col-md-4">

                <div class="row">{{#each featuredPosts}}
                    <div class="col-md-12">
                        <div class="post post-thumb">
                            <a class="post-img" href="/article/{{slug}}"><img src=".{{cover}}" alt="{{title}}"></a>
                            <div class="post-body">
                                <div class="post-meta">
                                    {{#with this.category}}
                                    <a class="post-category set-bg" data-color="{{color}}"
                                        style="background-color: {{color }};" href="/categories/{{slug}}">{{name}}</a>
                                    {{/with}}
                                    <span class="post-date">{{date createdAt "MMMM D, YYYY"}}</span>
                                </div>
                                <h3 class="post-title"><a href="/posts/{{slug}}">{{title}}</a></h3>
                            </div>
                        </div>
                    </div>

                    {{/each}}</div>
            </div>
            <!-- /featuredPosts -->


        </div>
        <!-- /row -->

        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2>Recent Posts</h2>
                </div>
            </div>

            <!-- post -->
            {{#each recentPosts}}
            <div class="col-md-4">
                <div class="post ">
                    <a class="post-img" href="/article/{{slug}}"><img src=".{{cover}}" alt="{{title}}"></a>
                    <div class="post-body">
                        <div class="post-meta">
                            {{#with this.category}}
                            <a class="post-category set-bg" data-color="{{color}}" style="background-color: {{color }};"
                                href="/categories/{{slug}}">{{name}}</a>
                            {{/with}}
                            <span class="post-date">{{date createdAt "MMMM D, YYYY"}}</span>
                        </div>
                        <h3 class="post-title"><a href="/posts/{{slug}}">{{title}}</a></h3>
                    </div>
                </div>
            </div>
            {{/each}}

            <!-- /post -->

        </div>
        <!-- /row -->

        <!-- row -->
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h2>Top Categories</h2>
                        </div>
                    </div>

                    {{#each topCategoryPosts}}
                    {{#when @index "eq" 0}}
                    <!-- post -->
                    <div class="col-md-12">
                        <div class="post post-thumb">
                            <a class="post-img" href="/posts/{{slug}}"><img src="{{cover}}" alt="{{title}}"></a>
                            <div class="post-body">
                                <div class="post-meta">
                                    {{#with category}}
                                    <a class="post-category set-bg" data-color="{{color}}"
                                        style="background-color: {{color}};" href="/categories/{{slug}}">{{name}}</a>
                                    {{/with}}
                                    <span class="post-date">{{date createdAt "MMMM D, YYYY"}}</span>
                                </div>
                                <h3 class="post-title"><a href="/posts/{{slug}}">{{title}}</a></h3>
                            </div>
                        </div>
                    </div>
                    <!-- /post -->
                    {{else}}
                    <!-- post -->
                    <div class="col-md-6">
                        <div class="post ">
                            <a class="post-img" href="/posts/{{slug}}"><img src="{{cover}}" alt="{{title}}"></a>
                            <div class="post-body">
                                <div class="post-meta">
                                    {{#with category}}
                                    <a class="post-category set-bg" data-color="{{color}}"
                                        style="background-color: {{color}};" href="/categories/{{slug}}">{{name}}</a>
                                    {{/with}}
                                    <span class="post-date">{{date createdAt "MMMM D, YYYY"}}</span>
                                </div>
                                <h3 class="post-title"><a href="/posts/{{slug}}">{{title}}</a></h3>
                            </div>
                        </div>
                    </div>
                    <!-- /post -->
                    {{/when}}
                    {{/each}}


                </div>
            </div>

            {{>aside}}
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->


<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h2>Most Read</h2>
                        </div>
                    </div>
                    {{#each mostReadPosts}}
                    <!-- post -->
                    <div class="col-md-12">
                        <div class="post post-row">
                            <a class="post-img" href="/article/{{slug}}"><img src=".{{cover}}" alt="{{title}}"></a>
                            <div class="post-body">
                                <div class="post-meta">
                                    {{#with this.category}}
                                    <a class="post-category set-bg" data-color="{{color}}"
                                        style="background-color: {{color }};" href="/categories/{{slug}}">{{name}}</a>
                                    {{/with}}
                                    <span class="post-date">{{date createdAt "MMMM D, YYYY"}}</span>
                                </div>
                                <h3 class="post-title"><a href="/posts/{{slug}}">{{title}}</a></h3>
                                <p>{{abstract}}</p>
                            </div>
                        </div>
                    </div>
                    <!-- /post -->
                    {{/each}}



                    <div class="col-md-12">
                        <div class="section-row">
                            <a class="primary-button center-block" href="/popular?page=2">Load More</a>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->