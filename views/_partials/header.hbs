{{#section 'js'}}
<script>let setColorClass = ".set-color";
    let setColorAttr = "data-color";
    let setColorEls = $(setColorClass);
    setColorEls.each(function (i) {
        $(this).hover(
            function () {
                $(this).css("color", $(this).attr(setColorAttr));
            },
            function () {
                $(this).css("color", "inherit");
            }
        );
    });</script>
